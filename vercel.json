{
  "name": "valle-360-platform",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install --legacy-peer-deps",
  "crons": [
    {
      "path": "/api/cron/collection",
      "schedule": "0 9,14,18 * * *"
    },
    {
      "path": "/api/cron/overdue",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/ml",
      "schedule": "15 */2 * * *"
    },
    {
      "path": "/api/cron/alerts",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/social-publish",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/social-metrics",
      "schedule": "10 6 * * *"
    }
  ]
}

